<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express CRUD App</title>
  </head>
  <body>
    <h1>Express CRUD App</h1>
    <ul>
      <% items.forEach(item => { %>
      <li>
        <a href="/item/<%= item._id %>"><%= item.name %></a>
        <form
          action="/item/<%= item._id %>/delete"
          method="post"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <a href="/new">New Item</a>
  </body>
</html>
