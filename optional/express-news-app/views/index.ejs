<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express News App</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Express News App</h1>
    <form action="/add-news" method="post">
      <label for="newsTitle">Başlık:</label>
      <input type="text" id="newsTitle" name="title" required />
      <label for="newsContent">İçerik:</label>
      <textarea id="newsContent" name="content" required></textarea>
      <button type="submit">Haber Ekle</button>
    </form>
    <ul>
      <% news.forEach((article, index) => { %>
      <li>
        <h2><%= article.title %></h2>
        <p><%= article.content %></p>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
