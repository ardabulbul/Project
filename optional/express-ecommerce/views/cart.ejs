<%- include('partials/header') %>

<div class="container">
  <h2>Shopping Cart</h2>
  <% if (cart.length === 0) { %>
  <p>Your cart is empty.</p>
  <% } else { %>
  <ul>
    <% cart.forEach(item => { %>
    <li><%= item.name %> - <%= item.price %> USD</li>
    <% }) %>
  </ul>
  <p>Total: <%= total %> USD</p>
  <a href="/checkout">Proceed to Checkout</a>
  <% } %>
</div>

<%- include('partials/footer') %>
